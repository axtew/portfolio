extends ../template

block variables
    - var title = 'Блог'

block content

    header.header
        div.profile.blog__profile
            div.photo.blog__photo
                img.blog__photo-img(src="./assets/img/photo.jpg", alt="photo")

            div.blog__text
                div.title.blog__title Блог
                div.blog__subtitle Статьи, которые я скопировал)

    div.header__arrow
        img.header__arrow-img(src="./assets/img/icons/arrow_down.svg", alt="down")

    section.blog
        .container
            aside.blog__nav.blog-nav
                ul.blog-nav__list
                    -
                        var title = [
                            'Самое важное в SASS',
                            'Приёмы в вёрстке, без которых не обходится ни один сайт',
                            'Самый необходимый набор Gulp плагинов',
                            'Почему я выбрал Pug'
